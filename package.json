        "esbuild": "^0.11.9",
        "esbuild-svelte": "^0.4.3",
        "node-watch": "^0.7.1",
        "postcss": "^8.2.10",
        "redis": "^3.1.0",
        "sass": "^1.32.8",
        "spectre.css": "^0.5.9",
        "svelte": "^3.37.0",
        "svelte-preprocess": "^4.7.0"
    }
}
