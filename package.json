{
    "name": "pagy",
    "version": "0.1.0",
    "description": "SvelteJS + SpectreCSS client, Derver BFF, LowDB base.json & JWT auth simple headless CMS, bundeled with ESBuild",
    "main": "index.js",
    "scripts": {
        "build": "node esbuild.mjs",
        "dev": "NODE_ENV=dev node esbuild.mjs --dev",
        "prestart": "npm run build",
        "start": "cd app && node app",
        "check": "svelte-check --tsconfig ./tsconfig.json",
        "lint": "eslint './src/**/*.{js,ts,svelte}'",
        "lint:fix": "eslint --fix './src/**/*.{js,ts,svelte}'",
        "prelint": "pnpm run format",
        "format": "prettier --ignore-path .gitignore --write './src/**/*.{js,ts,md,json,html,css,svelte}'",
        "test": "echo \"Error: no test specified\" && exit 1",
        "compose": "npm run build && docker compose up -d --no-deps --build && docker scan pagy"
    },
    "eslintConfig": {
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended"
        ],
        "plugins": [
            "@typescript-eslint",
            "svelte3"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "ecmaVersion": 2021,
            "sourceType": "module",
            "extraFileExtensions": [
                ".svelte"
            ]
        },
        "root": true,
        "env": {
            "node": true
        },
        "rules": {
            "semi": 0,
            "no-underscore-dangle": 0,
            "import/prefer-default-export": 0,
            "@typescript-eslint/no-explicit-any": "off"
        },
        "overrides": [
            {
                "files": [
                    "*.svelte"
                ],
                "processor": "svelte3/svelte3"
            }
        ],
        "settings": {
            "svelte3/typescript": true
        },
        "ignorePatterns": [
            "node_modules"
        ]
    },
    "prettier": {
        "semi": true,
        "tabWidth": 4,
        "printWidth": 120,
        "singleQuote": true,
        "svelteSortOrder": "options-markup-scripts-styles",
        "svelteStrictMode": true,
        "svelteAllowShorthand": true,
        "svelteIndentScriptAndStyle": true,
        "plugins": [
            "prettier-plugin-svelte"
        ]
    },
    "author": "Valexr",
    "license": "MIT",
    "devDependencies": {
        "@sindresorhus/slugify": "^2.1.1",
        "@slidy/media": "^1.2.7",
        "@tsconfig/svelte": "^3.0.0",
        "@types/cookie": "^0.5.1",
        "@types/eslint": "^8.4.9",
        "@types/jsonwebtoken": "^8.5.9",
        "@types/node": "^18.11.9",
        "@typescript-eslint/eslint-plugin": "^5.42.0",
        "@typescript-eslint/parser": "^5.42.0",
        "aovi": "^2.0.5",
        "aovi-svelte": "^0.2.5",
        "cookie": "^0.5.0",
        "cors": "^2.8.5",
        "derver": "^0.5.3",
        "dotenv": "^16.0.3",
        "esbuild": "^0.15.12",
        "esbuild-plugin-eslinter": "^0.1.3",
        "esbuild-svelte": "^0.7.1",
        "eslint": "^8.26.0",
        "eslint-plugin-svelte3": "^4.0.0",
        "jsonwebtoken": "^8.5.1",
        "lowdb": "^3.0.0",
        "node-watch": "^0.7.3",
        "postcss": "^8.4.18",
        "prettier": "^2.7.1",
        "prettier-plugin-svelte": "^2.8.0",
        "sass": "^1.55.0",
        "sortablejs": "^1.15.0",
        "spectre.css": "github:Valexr/spectre",
        "svelte": "^3.52.0",
        "svelte-check": "^2.9.2",
        "svelte-intl-precompile": "^0.11.1",
        "svelte-pathfinder": "^3.4.0",
        "svelte-preprocess": "^4.10.7",
        "svelte2tsx": "^0.5.20",
        "tslib": "^2.4.1",
        "typescript": "^4.8.4"
    }
}